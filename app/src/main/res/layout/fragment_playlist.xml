<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.mediateka.PlaylistFragment">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/fragment_playlist_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="fragment_playlist_placeholder_image,
        fragment_playlist_placeholder_text, fragment_playlist_placeholder_button"
        tools:visibility="visible" />

    <Button
        android:id="@+id/fragment_playlist_placeholder_button"
        style="@style/search_activity_history_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/fragment_playlist_placeholder_button"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_playlist_placeholder_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/img_not_found"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_playlist_placeholder_button" />

    <TextView
        android:id="@+id/fragment_playlist_placeholder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:textColor="@color/text_in_placeholder"
        android:textSize="19sp"
        android:text="@string/fragment_playlist_placeholder_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_playlist_placeholder_image"
        tools:text="Вы не создали ни одного плейлиста" />

</androidx.constraintlayout.widget.ConstraintLayout>