<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="main_activity_buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="settings_activity_title_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="toolbar_back_arrow">
        <item name="android:layout_width">@dimen/back_arrow_size</item>
        <item name="android:layout_height">@dimen/back_arrow_size</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="settings_activity_frame_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/horizontal_padding_settings_screen</item>
        <item name="android:paddingVertical">@dimen/vertical_padding_settings_screen</item>
    </style>

    <style name="settings_activity_image_view">
        <item name="android:layout_width">@dimen/ic_settings_size</item>
        <item name="android:layout_height">@dimen/ic_settings_size</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="settings_activity_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>