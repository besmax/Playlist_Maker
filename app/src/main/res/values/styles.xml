<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar_back_arrow">
        <item name="android:layout_width">@dimen/back_arrow_size</item>
        <item name="android:layout_height">@dimen/back_arrow_size</item>
        <item name="android:layout_marginStart">@dimen/back_arrow_margin_start</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="toolbar_back_arrow_with_title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginStart">-16dp</item>
    </style>

    <style name="screen_title_textview">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="settings_activity_image_view">
        <item name="android:paddingVertical">@dimen/settings_screen_section_vertical_padding</item>
    </style>

    <style name="settings_activity_text_view">
        <item name="android:paddingVertical">@dimen/settings_screen_section_vertical_padding</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="settings_activity_switch">
        <item name="android:checked">false</item>
    </style>

    <style name="search_activity_edit_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">@dimen/ic_inside_edit_text_padding</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_corner_radius</item>
    </style>

    <style name="new_playlist_screen_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke_newplaylist</item>
        <item name="boxBackgroundColor">@color/white_black</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_corner_radius</item>
    </style>

    <style name="search_activity_history_text_view_hint_text" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">24dp</item>
    </style>

    <style name="search_activity_list_item_track_name">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="search_activity_list_item_track_time_artist">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="search_activity_placeholder_refresh_button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="search_activity_placeholder">
        <item name="android:backgroundTint">@color/black</item>

    </style>

    <style name="search_activity_history_text_view">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search_activity_history_button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="activity_player_text_content">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">250dp</item>
    </style>

    <style name="activity_player_text_titles">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="tab_layout_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_screen_switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:paddingVertical">@dimen/settings_screen_section_vertical_padding</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bottom_navigation_text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
